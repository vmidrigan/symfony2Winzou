{# src/Pentalog/BlogBundle/Resources/views/Blog/edit.html.twig #}

{% extends "PentalogBlogBundle::layout.html.twig" %}

{% block title %}
  Modifier un article - {{ parent() }}
{% endblock %}

{% block pentalogblog_body %}

  <h2>Modifier un article</h2>

  {% include "PentalogBlogBundle:Blog:form.html.twig" %}

  <p>
    Vous éditez un article déjà existant,
    ne le changez pas trop pour éviter
    aux membres de ne pas comprendre
    ce qu'il se passe.
  </p>

  <p>
    <a href="{{ path('pentalog_blog_view', {'id': article.id}) }}" class="btn btn-default">
      <i class="icon-chevron-left"></i>
      Retour à l'article
    </a>
  </p>

{% endblock %}