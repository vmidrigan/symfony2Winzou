{# src/Pentalog/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "PentalogBlogBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block pentalogblog_body %}

  <h2>Liste des articles</h2>

  <ul>
    {% for article in articles %}
      <li>
        <a href="{{ path('pentalog_blog_view', {'slug': article.slug}) }}">{{ article.title }}</a>
        par {{ article.author }},
        le {{ article.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'articles</li>
    {% endfor %}
  </ul>
  
  <div class="pagination">
    <ul>
      {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
      {% for p in range(1, pageNumber) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('pentalog_blog_homepage', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

{% endblock %}